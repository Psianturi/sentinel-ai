# Server Configuration
PORT=3000
NODE_ENV=development

# Cronos zkEVM Configuration
CRONOS_ZKEVM_TESTNET_RPC=https://testnet.zkevm.cronos.org
CRONOS_ZKEVM_MAINNET_RPC=https://rpc-zkevm.cronos.org

# AI Agent Private Key (for signing transactions)
AGENT_PRIVATE_KEY=your_agent_private_key_here

# Contract Addresses (from deployment)
SGOLD_CONTRACT_ADDRESS=
SBOND_CONTRACT_ADDRESS=
SENTINEL_VAULT_ADDRESS=

# AI/LLM Configuration (choose one)
OPENAI_API_KEY=
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash

# Crypto.com AI Agent Client (optional)
# Note: @crypto.com/ai-agent-client currently requires OPENAI_API_KEY to function.
CRONOS_CHAIN_ID=240
CDC_OPENAI_MODEL=gpt-4o

# Explorer keys (optional, but recommended for best results)
CRONOS_MAINNET_EXPLORER_API_KEY=
CRONOS_TESTNET_EXPLORER_API_KEY=
CRONOS_ZKEVM_EXPLORER_API_KEY=
CRONOS_ZKEVM_TESTNET_EXPLORER_API_KEY=

# Optional signer app URL for CDC agent flows
CDC_SIGNER_APP_URL=

# Crypto.com MCP Server (Market Data)
MCP_SERVER_URL=https://mcp.crypto.com/market-data/mcp

# x402 Facilitator Configuration
X402_FACILITATOR_URL=
X402_API_KEY=
